
<% include head %>

  <div class="container"> <br><br>

    <div class='col-sm-4 col-sm-offset-4'>

    <% if (quote) { %>

      <form id="edit-quote-form" method="POST"
          action="/quotes/<%= quote._id %>?_method=PUT">
          <!-- why doesn't value="<#%= quote.body %>" display? -->
        <textarea name="body" class="form-control" id="quote-body"
            placeholder="Add your quote here ..."><%= quote.body %></textarea> <br>
        <input name="author" type="text" class="form-control" id="quote-author"
            value="<%= quote.author %>"
            placeholder="Who said it?"> <br>
        <button type="submit" class="btn btn-default">Update</button>
      </form>

    <% } else { %>

      <form id="new-quote-form" method="POST" action="/quotes">
        <textarea name="body" class="form-control" id="quote-body"
            placeholder="Add your quote here ..."></textarea> <br>
        <input name="author" type="text" class="form-control" id="quote-author"
            placeholder="Who said it?"> <br>
        <button type="submit" class="btn btn-default">Add</button>
      </form>

    <% } %>

    </div>

  </div>

<% include foot %>
